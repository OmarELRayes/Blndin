<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingEnd="60dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_alignParentStart="true"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/user"/>

    <TextView
        android:id="@+id/message_name_others"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/avatar"
        android:layout_alignTop="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Momen"
        android:textSize="12sp"/>
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/message_name_others"
        android:layout_alignStart="@+id/message_name_others"
        fancy:cardCornerRadius="5dp"
        fancy:cardElevation="5dp"

        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/message_body"
                android:text="Placeholder message"
                android:textSize="16sp"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>