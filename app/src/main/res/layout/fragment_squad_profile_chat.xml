<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.blndin.Fragments.SquadProfileDetailsFragment"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/super_light_grey">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_grey"
            android:text="FIFA 18"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/information"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dark_grey"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_squad_profile_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:padding="5dp"/>
    <LinearLayout
        android:id="@+id/squadchat_standing_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:visibility="visible">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/camera"
            android:layout_gravity="center_vertical"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_grey_text_chat"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">
            <EditText
                android:id="@+id/et_standing_squad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="9"
                android:textSize="15sp"
                android:hint="Write a message..."
                android:background="@android:color/transparent"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/gallery"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/squadchat_writing_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:background="@drawable/rounded_grey_text_chat"
        android:visibility="gone">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="19dp"
            android:src="@drawable/camera"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/et_writing_squad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:layout_weight="7"
            android:textSize="15sp"
            android:background="@android:color/transparent"
            />
        <TextView
            android:id="@+id/tv_squad_chat_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="Send"
            android:gravity="center"
            android:textColor="@color/light_green"
            />
    </LinearLayout>
</LinearLayout>
