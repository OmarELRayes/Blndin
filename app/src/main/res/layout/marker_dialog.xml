<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    fancy:cardCornerRadius="4dp"
    fancy:cardElevation="5dp"
    fancy:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/info_window_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Omar ELRayes"
                    android:textColor="@color/dark_grey"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_window_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/info_window_username"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Male"
                    android:textColor="@color/light_grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/info_window_btn_invite"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginEnd="3dp"
                android:gravity="center"
                fancy:fb_defaultColor="@color/light_green"
                fancy:fb_focusColor="#4c49a1"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="5dp"
                fancy:fb_text="Invite"
                fancy:fb_textColor="#FFFFFF" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/info_window_btn_preview"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                fancy:fb_defaultColor="@color/blndinPrimary"
                fancy:fb_focusColor="#4c49a1"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="5dp"
                fancy:fb_text="Preview"
                fancy:fb_textColor="#FFFFFF" />
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>