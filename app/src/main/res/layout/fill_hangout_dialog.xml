<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    fancy:cardCornerRadius="4dp"
    fancy:cardElevation="5dp"
    fancy:cardUseCompatPadding="true"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="10dp">
        <EditText
                android:id="@+id/hangout_title_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Hangout Title"
                android:textAlignment="center"
                android:background="@color/transparent_bg"
                android:text=""
                android:inputType="text"
                />
        <EditText
            android:id="@+id/hangout_message_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:hint="Enter Cover Letter"
            android:background="@color/transparent_bg"
            android:text=""
            android:inputType="text"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center">
            <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_hangout_send_invites"
            android:layout_width="0dp"
                android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="@color/light_green"
            fancy:fb_focusColor="@color/dark_green"
            fancy:fb_radius="5dp"
            fancy:fb_text="Invite"
            fancy:fb_textColor="#FFFFFF" />
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_hangout_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="@color/blue"
                fancy:fb_focusColor="@color/dark_green"
                fancy:fb_radius="5dp"
                fancy:fb_text="cancel"
                fancy:fb_textColor="#FFFFFF" />
        </LinearLayout>
       </LinearLayout>

</android.support.v7.widget.CardView>