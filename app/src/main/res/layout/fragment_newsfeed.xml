<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.blndin.Fragments.NewsfeedFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.TabLayout
        android:id="@+id/newsfeed_tab"
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        app:tabBackground="@color/white"
        app:tabIndicatorColor="@color/light_green"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/dark_green"
        app:tabTextColor="@color/light_grey" />

    <android.support.v4.view.ViewPager
        android:id="@+id/newsfeed_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/newsfeed_tab" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/newsfeed_fab"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/red"
        android:src="@drawable/ic_add"
        app:borderWidth="0dp" />

</RelativeLayout>
